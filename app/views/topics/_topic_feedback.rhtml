<%= "<div id=\"topic_feedback_#{topic.id}\" class=\"topic_feedback\">" %>
<% if topic.topic_feedback.exists?( :user_id => current_user ) %>
	<%= "Thanks!" %>
<% else %>		
	<%= link_to_remote( "Good", {:url => { :controller => "topics", :action => "topic_feedback", :topic_id => topic.id, :user_id => current_user.id, :score => 1 } } ) %>
	<%= link_to_remote( "Bad", {:url => { :controller => "topics", :action => "topic_feedback", :topic_id => topic.id, :user_id => current_user.id, :score => -1 } } ) %>
<% end %>
</div>