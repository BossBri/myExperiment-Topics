<% if @user -%>
  <li><%= link_to 'Users', users_path -%></li>
  
  <li><b>&#187;</b></li>

  <li><%= link_to h(@user.name), user_path(@user) -%></li>
<% end %>

<% if ["show", "new", "edit"].include? controller.action_name.to_s -%>
  <li><b>&#187;</b></li>
  
  <% case controller.action_name.to_s; when "show" -%>
    <li>Profile</li>
  <% when "new" -%>
    <li>New Profile</li>
  <% when "edit" -%>
    <li>Edit Profile</li>
  <% else -%>
    <!-- no breadcrumb -->
  <% end -%>
<% end -%>
